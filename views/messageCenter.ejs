<!DOCTYPE html>
<html lang='zh-cn'>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title></title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body{
            /* background-image: url("/img/bg.jpg");
            background-repeat: no-repeat;
            background-size: cover; */
            background-color: #444;
            color: white;
        }
        .box{
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 400px;
            background-color: rgba(180,180,180,0.3);
            margin-top: 50px;
        }
        .userinfo{
            width: 400px;
            margin-top: -249px;
        }
        .left{
            float: left;
        }
        .right{
            float: right;
            width: 300px;
            height: 100px;
            font-size: 18px;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
        }
        a{
            color: yellow;
        }
        a:hover{
            color: violet;
        }
        .text div{
            float: left;
        }
        .text div::after{
            clear: both;
        }
        .label{
            width: 100px;
            text-align: right;
            font-size: 100%;
        }
        .nickname>div:nth-child(2){
            width: 128px;
        }
        .nickname input{
            display: inline-block;
            width: 120px;
        }
    </style>
    <!--[if lt IE 9]>
    <script src="https://cdn.jsdelivr.net/npm/html5shiv@3.7.3/dist/html5shiv.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/respond.js@1.4.2/dest/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<h1 class="text-center">个人中心</h1>
<div class="text-right user-center">
    <a href="/">返回主页</a>
    <a href="/user/logout">退出登录</a>
</div>
<div class="box">
    <div class="userinfo">
        <div class="left">
            <img src="<%= user.avatar%>" width="100px" height="100px">
        </div>
        <div class="right">
            <div class="username text">
                <div class="label">用户名: </div>
                <div><%= user.username %></div>
            </div>
            <div class="nickname text">
                <div class="label">昵称: </div>
                <div><%= user.nickname %></div>
                <div>
                    <a href="javascript:;" onclick="mod()">修改昵称</a>
                </div>
            </div>
            <div class="text-right">
                <a href="">修改密码</a>
            </div>
        </div>
        <form action="" enctype="multipart/form-data">
            <input type="file" value="更新头像" style="margin-left: 15px;">
            <input type="button" class="btn btn-default" value="提交" style="margin-left: 27px;color: black">
        </form>

    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/jquery@1.12.4/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"></script>
<script>
    function mod(){
        var newName = prompt("请输入新的昵称");
        console.log(newName);
        $.ajax({
            url:"/messageProj/user/change/"+newName,
            success:function (result) {
                if(result.status ==1){
                    alert("修改失败");
                    return;
                }
                alert("修改成功");
                location.href = location.href;
            }
        });
    }
</script>
</body>
</html>
